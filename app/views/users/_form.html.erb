<%= form_for @user, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :login_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :login_id, :class => 'text_field' %>
      <% @user.errors[:login_id].each do |err| %>
        <p style="color: red"><%= err %></p>
      <% end %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :name, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :name, :class => 'text_field' %>
      <% @user.errors[:name].each do |err| %>
        <p style="color: red"><%= err %></p>
      <% end %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :email, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :email, :class => 'text_field' %>
      <% @user.errors[:email].each do |err| %>
        <p style="color: red"><%= err %></p>
      <% end %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :password, :class => 'control-label' %>
    <div class="controls">
      <%= f.password_field :password, :class => 'password_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label '確認用パスワード', :class => 'control-label' %>
    <div class="controls">
      <%= f.password_field :password_confirmation, :class => 'password_field' %>
      <% @user.errors[:password_confirmation].each do |err| %>
        <p style="color: red"><%= err %></p>
      <% end %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                users_path, :class => 'btn' %>
  </div>
<% end %>
